div.portal#footer
  div
    div.responsive
      if app_locale
        ol.menu.locale
          each o, id in app_locale
            li(class=id class={active: o.active})
              a(href="?language="+id)
                span= id.toUpperCase()

      if visits_total || visits_count
        ol.served
          li.hits
            if visits_total
              span.user(title="Overall hits") #{visits_total}
            if visits_count
              span.Hited.by(title="Overall hits") #{visits_count}
            span served

      ol.copyright
        li.copyright MyOrdbok Â© 2019
      ol.menu.privacy
        each v, route in navTerms
          li(class=v.route class={active: v.active})
            a(href=v.url)
              span= v.text
