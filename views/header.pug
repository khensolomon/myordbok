div.ptl#header
  div.resz.ltrt
    div.row
      div.column
        ol.menu.dictionary#MyOrdbok-logo(data-lang=sol.id)
          each v, route in navDictionary
            li(class=v.route class={active: v.active})
              a(href='/dictionary')
                span #{sol.name}
                span Myanmar
      div.column.wide
        each v, route in navDefinition
          form(name='search' method='get' action=v.url ref="form" v-bind:class="hasActive" @submit.prevent="input_submit")
            p
              input(
                type="search" ref="input" name="q" placeholder=" ...Search" autocomplete="off" query=meta.q
                v-model = "q"
                @keydown.down = "arrow_down"
                @keydown.up = "arrow_up"
                @input = "input_change"
                @focus = "input_focus"
                @click = "input_click"
                @blur = "input_blur"
              )
            p
              button(type="submit" id="search") &#xe83d;

            ul(v-if=hasFocus)
              li(
                v-for="(word,index) in suggests" :key="index"
                class="hover-active"
                v-bind:class = "{'selected': isCurrent(index)}"
                @mousemove = "suggestion_hover(index)"
                @click = "suggestion_click(word)"
                v-html = "wordHighlight(word)"
              )