block content
  div.ptl#content
    div.resz.ltrt
      div.grammar.forPartsofspeech
        div.row.primary.text-centers
          div
            h1= grammar.root.name
            +rootDesc(grammar.root)
            if grammar.cate
              +categoryLink(grammar.cate)

        div.row.secondary.text-centers
          div.detail
            if grammar.word
              +wordList(grammar.word)
            +examList(grammar.exam)

            each o in grammar.kind
              div
                h2(id=o.root.name)= o.root.name
                div
                  +rootDesc(o.root)
                  if o.cate
                    +categoryLink(o.cate)
                  if o.word
                    +wordList(o.word)
                  if o.exam
                    +examList(o.exam)
                  if o.kind
                    each i in o.kind
                      div
                        h3(id=i.root.name)= i.root.name
                        div
                          +rootDesc(i.root)
                          if i.word
                            +wordList(i.word)
                          if i.exam
                            +examList(i.exam)
                          if i.cate
                            +categoryLink(i.cate)
                          if i.kind
                            each e in i.kind
                              div
                                h4(id=e.root.name)= e.root.name
                                div
                                  +rootDesc(e.root)
                                  if e.word
                                    +wordList(e.word)
                                  if e.exam
                                    +examList(e.exam)

block footer
  include footer